{
  "name": "bull-monitor",
  "version": "1.1.0",
  "description": "Simple utility to monitor your bull queues",
  "author": "Eric Hayes <eric@deployfx.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "ci:build": "npm run build && docker-compose build --build-arg BUILD_VERSION=$npm_package_version bull-monitor",
    "ci:publish": "npm run ci:build && docker-compose push bull-monitor",
    "format": "prettier --write test.ts \"src/**/*.ts\" \"test/**/*.ts\"",
    "generate:create": "CREATE_DELAY_MS=100 ACTION=create ts-node test.ts",
    "generate:process": "DELAY_MS=500 ACTION=process ts-node test.ts",
    "services:start": "docker-compose up -d grafana redis",
    "services:start:all": "docker-compose up -d grafana bull-monitor",
    "services:stop": "docker-compose stop",
    "services:remove": "docker-compose rm --stop -f",
    "start": "dotenv -e environments/local.env -- ts-node -r tsconfig-paths/register src/daemon.ts",
    "start:dev": "dotenv -e environments/local.env -- nest start -- --watch",
    "start:debug": "dotenv -e environments/local.env -- nest start --debug --watch",
    "start:prod": "node dist/daemon",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint --fix",
    "precommit": "npm run lint && npm run build && npm run test && npm run test:e2e",
    "test": "dotenv -e environments/test.env -e environments/local.env -- jest",
    "test:watch": "dotenv -e environments/test.env -e environments/local.env -- jest --watch",
    "test:cov": "dotenv -e environments/test.env -e environments/local.env -- jest --coverage",
    "test:debug": "dotenv -e environments/test.env -e environments/local.env -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e environments/test.env -e environments/local.env -- jest --rootDir . --testRegex '.e2e-spec.ts$' --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@bull-board/api": "^3.11.0",
    "@bull-board/express": "^3.11.0",
    "@nestjs/common": "^8.4.5",
    "@nestjs/core": "^8.4.5",
    "@nestjs/event-emitter": "1.1.1",
    "@nestjs/platform-express": "^8.4.5",
    "@nestjs/swagger": "^5.2.1",
    "@sentry/node": "^7.1.1",
    "@sentry/tracing": "^7.1.1",
    "async-mutex": "^0.3.2",
    "bull": "^4.8.3",
    "bull-arena": "^3.29.3",
    "bull-master": "^1.0.5",
    "bull-prom": "ejhayes/bull-prom#master",
    "bullmq": "^1.82.0",
    "envalid": "^7.3.1",
    "forever-monitor": "^3.0.3",
    "nestjs-redis": "https://github.com/skunight/nestjs-redis#939f33a7f9b252e872c6edb76a3a860ed053bacf",
    "prom-client": "^14.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^4.4.0",
    "tiny-typed-emitter2": "^1.0.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.5",
    "@types/bull": "^3.15.8",
    "@types/bull-arena": "^3.0.5",
    "@types/express": "^4.17.13",
    "@types/forever-monitor": "^1.7.6",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chalk": "^4.1.2",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^8.0.1",
    "ioredis": "^5.0.5",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "jest": {
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
