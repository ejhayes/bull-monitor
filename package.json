{
  "name": "bull-exporter",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "ci:build": "npm run build && docker-compose build bull-monitor",
    "ci:publish": "npm run ci:build && docker-compose push bull-monitor",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "services:start": "docker-compose up -d grafana",
    "services:start:all": "docker-compose up -d grafana bull-monitor",
    "services:stop": "docker-compose stop",
    "services:remove": "docker-compose rm --stop -f",
    "start": "dotenv -e environments/local.env -- nest start",
    "start:dev": "dotenv -e environments/local.env -- nest start --watch",
    "start:debug": "dotenv -e environments/local.env -- nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint --fix",
    "precommit": "npm run lint && npm run build && npm run test && npm run test:e2e",
    "test": "dotenv -e environments/local.env -e environments/test.env -- jest",
    "test:watch": "dotenv -e environments/local.env -e environments/test.env -- jest --watch",
    "test:cov": "dotenv -e environments/local.env -e environments/test.env -- jest --coverage",
    "test:debug": "dotenv -e environments/local.env -e environments/test.env -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e environments/local.env -e environments/test.env -- jest --rootDir . --testRegex '.e2e-spec.ts$'"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/event-emitter": "0.0.3",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "async-mutex": "^0.3.1",
    "bull": "^3.22.5",
    "bull-arena": "^3.21.0",
    "bull-board": "^2.1.0",
    "bull-prom": "ejhayes/bull-prom#master",
    "envalid": "^7.1.0",
    "nestjs-redis": "^1.3.3",
    "prom-client": "^13.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "source-map-support": "^0.5.19",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/bull": "^3.15.1",
    "@types/bull-arena": "^3.0.3",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.5",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chalk": "^4.1.1",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-typescript-sort-keys": "^1.6.0",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "ioredis-mock": "^5.5.6",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageReporters": ["text","lcov"],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
